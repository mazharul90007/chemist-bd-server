model Medicine {
    id           String           @id @default(uuid())
    sellerId     String
    seller       User             @relation(fields: [sellerId], references: [id])
    name         String
    generic_name String?
    strength     String?
    company      String
    photoUrl     String?
    quantity     Int
    price        Int
    Indications  String?
    Pharmacology String?
    type         MedicineType     @default(OTHER)
    categoryId   String
    category     MedicineCategory @relation(fields: [categoryId], references: [id])
    dosage       String?
    side_effects String?
    warnings     String?
    createdAt    DateTime         @default(now())
    updatedAt    DateTime         @updatedAt
    reviews      Review[]
    orderItems   OrderItem[]

    @@index([company, price])
    @@map("medicines")
}

enum MedicineType {
    SYRUP
    TABLET
    CAPSULE
    OTHER
}
